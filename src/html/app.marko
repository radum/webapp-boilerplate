<!doctype html>
<html class="no-js" lang="">
	<head>
		<include('./includes/head-content.marko', data) />
	</head>
	<body>
		<!-- Express app renders `/pages/{page}.marko` files, each page gets injected here via nested attributes -->
		<include(input.page)/>

		<if(data.assets.runtimeContent)>
		<script>${data.assets.runtimeContent}</script>
		</if>
		<for(file in data.assets.scripts)>
		<script src="${file}"></script>
		</for>

		<include('./includes/service-worker.marko') />

		<!-- Google Analytics: change UA-XXXXX-X to be your site's ID -->
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
			(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
			m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
			ga('create', 'UA-XXXXX-X', 'auto');
			ga('send', 'pageview');
		</script>

		<!-- Built with love using RaduM's ES6 Web app boilerplate -->
		<if(data.isProd === false)>
		<include('./includes/browser-sync.marko', data.browserSync) />
		</if>
	</body>
</html>
